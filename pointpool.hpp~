#include <vector>

class PointPool {
public:
  
private:
  

  class placeHolder {
  public:
    virtual ~placeHolder() {}
    virtual placeHolder * setNext const = 0;
  };

  template <typename T> class holder: public placeHolder {
  public:
    holder(T * d): data(d), next(0) {}
    ~holder() { delete data; if(next != 0) delete next;}
  private:
    T * data;
    placeHolder * next;
  };

  placeHolder * content;


};
